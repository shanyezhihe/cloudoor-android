<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f7" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        layout="@layout/title_bar_set_detail_change_phone" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83.5dp"
        android:background="@drawable/shape_white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="已绑定手机"
            android:textColor="#000000"
            android:textSize="17sp" />
        
        <TextView
            android:id="@+id/my_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16.5dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="180230***88"
            android:textColor="#747f8d"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143.5dp"
        android:background="@drawable/shape_white" >

        <TextView
            android:id="@+id/btn_change_phone1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="更改绑定手机"
            android:textColor="#000000"
            android:textSize="17sp" />
        
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>

</RelativeLayout>