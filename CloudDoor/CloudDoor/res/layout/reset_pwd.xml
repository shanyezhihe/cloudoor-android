<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/title_reset_pwd"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        layout="@layout/title_reset_pwd" />

    <EditText
        android:id="@+id/reset_pwd_input_pwd"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:hint="输入新密码"
        android:textColorHint="#bdc7d4"
        android:padding="10dp"
        android:textSize="17dp"
        android:textColor="#000000"
        android:background="@drawable/shape_confirm"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/reset_pwd_input_pwd_again"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:hint="再输一遍"
        android:textColorHint="#bdc7d4"
        android:padding="10dp"
        android:textSize="17dp"
        android:textColor="#000000"
        android:background="@drawable/shape_confirm"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/reset_pwd_complete"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="287dp"
        android:background="@drawable/shape_color_blue"
        android:gravity="center"
        android:text="确    定"
        android:textColor="#ffffff"
        android:textSize="17sp" />

</RelativeLayout>