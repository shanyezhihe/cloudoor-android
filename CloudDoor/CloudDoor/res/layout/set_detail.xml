<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f7" >

    <include
        android:layout_width="match_parent"
        android:layout_height="40dp"
        layout="@layout/title_bar_set_detail" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="144dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68.5dp"
        android:background="@drawable/shape_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="摇一摇开门"
                android:textColor="#000000"
                android:textSize="17sp" />
            
            <ImageView 
                android:id="@+id/btn_set_detail_shake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_yes"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp" />
            
            <TextView 
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="55dp"
                android:text="YES"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="17sp" />
            
            <TextView 
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="NO"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="17sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bdc7d4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="声音"
                android:textColor="#000000"
                android:textSize="17sp" />
            
            <ImageView 
                android:id="@+id/btn_set_detail_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_yes"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp" 
                />
            
            <TextView 
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="55dp"
                android:text="YES"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="17sp" />
            
            <TextView 
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="NO"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="17sp" />
            
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bdc7d4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="免提醒"
                android:textColor="#000000"
                android:textSize="17sp" />
            
            <ImageView 
                android:id="@+id/btn_set_detail_disturb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_yes"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp" />
            
            <TextView 
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="55dp"
                android:text="YES"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="17sp" />
            
            <TextView 
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="NO"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="17sp" />
            
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="232.5dp"
        android:background="@drawable/shape_white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="常用"
            android:textColor="#000000"
            android:textSize="17sp" />
        
        <ImageView
            android:id="@+id/btn_switch_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_car_gray"
            android:layout_marginLeft="86.5dp" />

        <ImageView
            android:id="@+id/btn_switch_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_ren"
            android:layout_marginLeft="150.5dp" />"
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300.5dp"
        android:background="@drawable/shape_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="48dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="修改密码"
                android:textColor="#000000"
                android:textSize="17sp" />
            
            <RelativeLayout
                android:id="@+id/btn_reset_pwd"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" >
            </RelativeLayout>
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bdc7d4" />

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="48dp" >

            <TextView
                android:id="@+id/btn_change_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="更改绑定手机"
                android:textColor="#000000"
                android:textSize="17sp" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>