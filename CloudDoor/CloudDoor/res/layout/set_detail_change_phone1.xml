<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f7" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        layout="@layout/title_bar_set_detail_change_phone" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="55dp"
        android:text="请输入你的旧手机"
        android:textSize="16sp"
        android:textColor="#747f8d" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83.5dp"
        android:background="@drawable/shape_white"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="17sp"
        android:inputType="number" />
    
    <TextView
        android:id="@+id/btn_change_phone2"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="287dp"
        android:background="@drawable/shape_color_blue"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="17sp" />

</RelativeLayout>