<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f7" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        layout="@layout/title_bar_set_detail_change_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="55dp"
        android:text="请输入你的需要绑定的新手机号"
        android:textColor="#747f8d"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83.5dp"
        android:background="@drawable/shape_gray" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="国家"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16.5dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="中国大陆"
            android:textColor="#000000"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143.5dp"
        android:background="@drawable/shape_white" >

        <TextView
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="新手机号"
            android:textColor="#000000"
            android:textSize="17sp" />
        
        <EditText
            android:layout_width="210dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="17sp"
            android:background="@null"
            android:layout_marginLeft="84dp"
            android:inputType="number" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_change_phone3"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="287dp"
        android:background="@drawable/shape_color_blue"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="17sp" />

</RelativeLayout>